# OpenAI API 配置
openai:
  # 在此处填入你的 OpenAI API 密钥
  api_key: "your-openai-api-key-here"
  
  # 使用的模型
  model: "gpt-3.5-turbo"
  
  # API基础URL（通常无需修改）
  base_url: "https://api.openai.com/v1"
  
  # 生成参数
  temperature: 0.1      # 控制生成的随机性，越低越确定
  max_tokens: 1000      # 最大生成令牌数
  
  # 请求配置
  timeout: 30           # 请求超时时间（秒）
  max_retries: 3        # 最大重试次数
  retry_delay: 1        # 重试延迟（秒）

